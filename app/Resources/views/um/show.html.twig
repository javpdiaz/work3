{% extends 'base.html.twig' %}

{% block body %}
    <h1>Um</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ um.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ um.name }}</td>
            </tr>
            <tr>
                <th>Um</th>
                <td>{{ um.um }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ um.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if um.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('um_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('um_edit', { 'id': um.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
